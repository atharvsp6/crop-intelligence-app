# Production Environment Variables Template
# Copy to backend/.env (or set in your hosting dashboard) and fill with real values

# Flask / App Settings
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=replace-with-strong-random-secret
PORT=8080

# MongoDB Atlas
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=crop-intelligence
MONGO_DB=crop_intelligence

# Authentication
JWT_SECRET_KEY=replace-with-strong-jwt-secret
JWT_EXPIRY_HOURS=24

# Google Gemini AI
GEMINI_API_KEY=your-google-gemini-api-key
MULTILINGUAL_GEMINI_MODEL=gemini-2.5-flash
YIELD_GEMINI_MODEL=gemini-2.0-flash-exp

# Weather & Government Data
OPENWEATHER_API_KEY=your-openweather-key
GOVT_OPEN_DATA_KEY=your-data-gov-key
DATA_GOV_IN_API_KEY=your-data-gov-key

# Market Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
COMMODITIES_API_KEY=your-commodities-api-key
MANDI_API_KEY=your-mandi-api-key
QUANDL_API_KEY=your-quandl-key
EXCHANGERATE_API_KEY=your-exchangerate-key
USDA_API_KEY=your-usda-key

# Frontend / CORS
FRONTEND_URL=https://your-frontend-domain
ALLOWED_ORIGINS=https://your-frontend-domain

# Optional integrations
NEWS_API_KEY=your-news-api-key